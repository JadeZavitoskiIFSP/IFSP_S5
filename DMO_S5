Pasta para guardar exercícios de fixação da matéria de desenvolvimento mobile :)


LISTA 1 - CÓDIGO:

package Exercicios

import kotlin.math.round

fun Exercicio1() {
    println("EXERCÍCIO 1: Restante da Ração!")

    println("Digite o peso total da ração:")
    val racao = readln().toFloat()

    println("Digite (em gramas) o quanto dará de ração aos gatos:")
    val gato1 = readln().toFloat()

    val gato2 = gato1

    println("Digite por quantos dias você já deu ração:")
    val dias = readln().toInt()

    val resultado = (racao - ((gato1 + gato2) * dias))
    if (resultado > 0) {
        println("O restante após $dias dias é: $resultado")
    } else {
        println("A ração acabou :(")
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fun Exercicio2() {
    println("EXERCÍCIO 2: Espetáculo Teatral!")

    println("Digite o custo total do espetáculo:")
    val espet = readln().toFloat()

    println("Digite o valor unitário dos ingressos:")
    val ingresso = readln().toFloat()

    val resultado = espet/ingresso

    println("Devem ser vendidos, no mínimo ${round(resultado)} ingressos!")
}

